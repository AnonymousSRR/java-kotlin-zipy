<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GenerateErrorsActivity">

    <!-- Header Section -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/profile_header_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        app:cornerRadius="24dp"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/purple_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/purple_200"
        app:strokeWidth="1dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="Generate Errors"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Error Count Display -->
    <TextView
        android:id="@+id/errorCountTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="Errors Generated: 0"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <!-- Status Display -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ready to generate errors"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Main Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Exception Errors Section -->
            <TextView
                android:id="@+id/exceptionSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exception Errors"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/exceptionCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/exceptionSectionTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nullPointerButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="NullPointer"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/arrayIndexButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="ArrayIndex"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/classCastButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="ClassCast"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numberFormatButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="NumberFormat"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/illegalArgumentButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="IllegalArgument"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/illegalStateButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="IllegalState"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                    <!-- Row 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/securityExceptionButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Security"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/unsupportedOperationButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Unsupported"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Arithmetic Errors Section -->
            <TextView
                android:id="@+id/arithmeticSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Arithmetic Errors"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/exceptionCard" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/arithmeticCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/arithmeticSectionTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/divisionByZeroButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="Division by Zero"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_dialog_alert"
                        app:iconSize="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/overflowButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Integer Overflow"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_dialog_alert"
                        app:iconSize="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Range Errors Section -->
            <TextView
                android:id="@+id/rangeSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Range Errors"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/arithmeticCard" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rangeCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rangeSectionTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/stringIndexButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="String Index"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/negativeArrayButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Negative Array"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/indexOutOfBoundsButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Index Out of Bounds"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/underflowButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Integer Underflow"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Memory Errors Section -->
            <TextView
                android:id="@+id/memorySectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Memory Errors"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rangeCard" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/memoryCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memorySectionTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/outOfMemoryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="Out of Memory"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_dialog_alert"
                        app:iconSize="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/stackOverflowButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Stack Overflow"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_dialog_alert"
                        app:iconSize="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Reflection Errors Section -->
            <TextView
                android:id="@+id/reflectionSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Reflection Errors"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoryCard" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reflectionCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reflectionSectionTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/classNotFoundButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Class Not Found"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/noSuchMethodButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="No Such Method"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/noSuchFieldButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="No Such Field"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/instantiationButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Instantiation"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/illegalAccessButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Illegal Access"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/invocationTargetButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Invocation Target"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- File System Errors Section -->
            <TextView
                android:id="@+id/fileSystemSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="File System Errors"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reflectionCard" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fileSystemCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fileSystemSectionTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fileNotFoundButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="File Not Found"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_dialog_alert"
                        app:iconSize="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/ioExceptionButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="IOException"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_dialog_alert"
                        app:iconSize="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Custom Errors Section -->
            <TextView
                android:id="@+id/customSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Custom Errors"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fileSystemCard" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/customCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customSectionTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/customExceptionButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Custom Exception"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/concurrentModificationButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Concurrent Modification"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/timeoutExceptionButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Timeout Exception"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/networkExceptionButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Network Exception"
                            android:textSize="10sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_dialog_alert"
                            app:iconSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Flame Animation Overlay - Positioned above everything -->
    <ImageView
        android:id="@+id/flameImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_flame"
        android:visibility="gone"
        android:elevation="9999dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 