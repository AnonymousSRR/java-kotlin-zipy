<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".DashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/welcomeTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:gravity="center"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcomeMessageTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/signup_success"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeTitleTextView" />

        <TextView
            android:id="@+id/userInfoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/user_information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:gravity="center"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeMessageTextView" />

        <TextView
            android:id="@+id/userDetailsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name: [User Name]\nEmail: [user@email.com]"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userInfoTextView" />

        <TextView
            android:id="@+id/featuresTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="App Features"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:gravity="center"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userDetailsTextView" />

        <!-- Row 1: My Profile, Hit APIs -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/myProfileButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="My Profile"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/purple_500"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toStartOf="@+id/hitApisButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/featuresTitleTextView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hitApisButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:text="Hit APIs"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/teal_500"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/myProfileButton"
            app:layout_constraintTop_toTopOf="@+id/myProfileButton" />

        <!-- Row 2: Generate Errors, ANR/CRASH -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/generateErrorsButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Generate Errors"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/teal_700"
            app:icon="@android:drawable/ic_dialog_alert"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toStartOf="@+id/anrCrashButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myProfileButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/anrCrashButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:text="ANR/CRASH"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/purple_700"
            app:icon="@android:drawable/ic_dialog_info"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/generateErrorsButton"
            app:layout_constraintTop_toTopOf="@+id/generateErrorsButton" />

        <!-- Row 3: Scroll, Drag and Drop -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/scrollButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Scroll"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/teal_200"
            app:icon="@android:drawable/arrow_up_float"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toStartOf="@+id/dragDropButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/generateErrorsButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dragDropButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:text="Drag and Drop"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/purple_200"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scrollButton"
            app:layout_constraintTop_toTopOf="@+id/scrollButton" />

        <!-- Row 4: Animations, Settings -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/animationsButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Animations"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/teal_500"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toStartOf="@+id/settingsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:text="Settings"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/purple_500"
            app:icon="@android:drawable/ic_menu_manage"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/animationsButton"
            app:layout_constraintTop_toTopOf="@+id/animationsButton" />

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/logout"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/teal_700"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animationsButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView> 